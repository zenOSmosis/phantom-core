{
  "name": "phantom-core",
  "version": "3.0.0-alpha",
  "description": "Node.js and browser compatible, base JavaScript EventEmitter-based class with base utility methods, logging, event proxies, collections, and destroy handling",
  "author": {
    "name": "zenOSmosis",
    "email": "info@zenosmosis.com",
    "url": "https://zenosmosis.com"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build && husky install",
    "document": "rm -rf docs && typedoc src/index.ts && cp phantom.svg docs",
    "build": "tsc",
    "test": "npm run test-node && npm run test-sauce-browsers",
    "test-node": "tape -r ts-node/register/transpile-only 'test/{,/**/}*.test.js'",
    "test-sauce-browsers": "npm run build && dotenv airtap --coverage --concurrency 1 -- 'test/{,/**/}*.test.js'",
    "test-local-browsers": "npm run build && airtap -p local --coverage --concurrency 1 -- 'test/{,/**/}*.test.js'",
    "coverage": "nyc tape -r ts-node/register/transpile-only 'test/{,/**/}*.test.js'",
    "lint": "prettier --write '(**/)*.js'",
    "check-dep-updates": "npx npm-check-updates"
  },
  "dependencies": {
    "dayjs": "^1.11.2",
    "deepmerge": "^4.2.2",
    "is-plain-object": "^5.0.0",
    "setimmediate": "^1.0.5",
    "short-uuid": "^4.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@types/setimmediate": "^1.0.2",
    "@types/uuid": "^8.3.4",
    "airtap": "^4.0.4",
    "airtap-sauce": "^1.1.2",
    "dotenv-cli": "^4.0.0",
    "husky": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "tape": "^5.3.1",
    "ts-node": "^10.8.0",
    "tsify": "^5.0.4",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=16.14.0"
  }
}
