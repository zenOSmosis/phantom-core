{
  "name": "phantom-core",
  "version": "3.0.0-alpha",
  "description": "Node.js and browser compatible, base JavaScript EventEmitter-based class with base utility methods, logging, event proxies, collections, and destroy handling",
  "author": {
    "name": "zenOSmosis",
    "email": "info@zenosmosis.com",
    "url": "https://zenosmosis.com"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test": "npm run test-node && npm run test-browser",
    "test-node": "npm run build && tape 'test/{,/**/}*.test.js'",
    "test-browser": "npm run build && dotenv airtap --coverage --concurrency 1 -- 'test/{,/**/}*.test.js'",
    "coverage": "nyc npm run test-node",
    "lint": "prettier --write '(**/)*.js'",
    "check-dep-updates": "npx npm-check-updates"
  },
  "dependencies": {
    "dayjs": "^1.10.7",
    "deepmerge": "^4.2.2",
    "is-plain-object": "^5.0.0",
    "short-uuid": "^4.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/setimmediate": "^1.0.2",
    "@types/uuid": "^8.3.4",
    "airtap": "^4.0.4",
    "airtap-sauce": "^1.1.2",
    "dotenv-cli": "^4.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "setimmediate": "^1.0.5",
    "tape": "^5.3.1",
    "typescript": "^4.6.4"
  }
}
